//Divide by 5 and 7

function divideBy5Or7(){
  for(var i=1; i<=1000;i++)
    {
      if(i % 5 === 0 && i % 7 === 0)
        {
          
          console.log(i);
        }
      
    }
  
}
divideBy5Or7();


//divide by 5 or 7
function divideBy5Or7(){
  for(var i=1; i<=1000;i++)
    {
      if(i % 5 === 0 || i % 7 === 0)
        {
          
          console.log(i);
        }
      
    }
  
}
divideBy5Or7();

//divide by 3
function By3()
{
  for(var i=1000;i<=1;i--)
    {
      if(i % 3 !== 0)
        {
          
          console.log(i);
        }
      
    }
  
}
By3();

//Add even numbers---------------------------------------------------------
var sum =0;
function addEvenNumbers(){
  for(var i=2; i<=500; i=i+2){
    
    sum= sum+i;
    console.log("The Number is : " +i +" And sum is : " + sum);
      
    }
      
  }
addEvenNumbers()8555555555555500

