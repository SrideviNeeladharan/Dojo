//Find MINMAX

function MinMax(array)
{
  var max=array[0];
  var min=array[0];
  for(var i=0; i<array.length;i++)
  {
    if(max < array[i])
    {
    max=array[i];
    console.log("max is : "+ max);
    }     
    if(min > array[i])
      {
        min=array[i];
        console.log("min is : " + min);
      }
    
   }
   
 }


MinMax([9,2,7,5,11,3]);

//find average------------------------------------------------------------
var sum=0;
var avg=0;
function avgArr(arr){
  for(var i=0; i<arr.length; i++){
   sum=sum+arr[i];
    
  }
  console.log("sum is: " + sum);
  avg=sum/arr.length;
  console.log("Average is: "+ avg);
}

avgArr([9,2,7,11,5,3])